{%  extends 'profiladminbase.html.twig' %}
{% block body %}



    <section id="main">
        <div class="container">
            <div class="row">
                <div  class="col-md-9">
                    <ol  class="breadcrumb">
                        <li class="active">Profil</li>
                    </ol>
                    <div class="panel panel-default">

                        <nav class="navbar navbar-inverse">
                            <div class="container-fluid">

                                <ul class="nav navbar-nav">
                                    <li class="active"><a href="{{ path('profil_ad') }}">Info</a></li>
                                    <li><a href="{{ path('securite') }}">Sécurité</a></li>

                                </ul>
                            </div>
                        </nav>
                        <div class="panel-body">
                            <center>
                                <div class="row">
                                    <h1 class="text-primary text-center">Info</h1>
                                    <div style="margin-left: -1%;width: 100%;padding-right: 5px;" class="col-sm-6 col-sm-offset-3">


                                        <table  class="table table-striped">

                                            <tbody>
                                            {% for user in users %}
                                            <tr>
                                                <th>Nom d'utilisateur</th>
                                                <td>{{ user.username }}</td>
                                            </tr>

                                            <tr>
                                                <th>Prénom</th>
                                                <td>{{ user.name }}</td>
                                            </tr>
                                            <tr>
                                                <th>Nom</th>
                                                <td>{{ user.lastname }}</td>
                                            </tr>
                                            <tr>
                                                <th>Email</th>
                                                <td>{{ user.email }}</td>
                                            </tr>


                                            <tr>
                                                <th>Numéro de tel</th>
                                                <td>{{ user.numtel }}</td>
                                            </tr>
                                            <tr>
                                                <th>Addresse</th>
                                                <td>{{ user.addresse }}</td>
                                            </tr>



                                            </tbody>
                                        </table>
                                        <a style="padding:4px 5px;" href="{{ path('edit_ad') }}" class="btn btn-primary a-btn-slide-text"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span><span><strong> Modifier</strong></span>  </a>

                                        {% endfor %}


                                    </div>

                                </div>
                            </center>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

<br/><br/><br/><br/>

{%  endblock %}
