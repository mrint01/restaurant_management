{% extends 'passbase.html.twig' %}


{% block body %}
    <center>
        <form method="post" action="{{ path('reset_password', {'token':token}) }}">
            <section style="margin-top:160px;" id="main">
                <div class="container">


                    <div style="margin-left: 242px;" class="row">
                        <div class="col-md-9">
                            <div class="panel panel-default">
                                <div class="panel-heading" style="background-color:  black;">
                                    <h3  style="color:white;" class="panel-title">Réinitialiser le mot de passe </h3>
                                </div>
                                <br/>
                                <h4>Nouveau mot de passe</h4>
                                <label for="inputPassword" class="sr-only">Mot de passe</label>
                                <input style="width: 63%;"  type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                                <br/>
                                <button class="btn btn-lg btn-primary" type="submit">
                                    registre
                                </button>


                                <br/>
                                <br/><br/>
                            </div>
                        </div>
                    </div>
                </div>

            </section>
        </form>
    </center>

    <footer id="footer" style="margin-top: 206px;  padding: 6px;">
        <p>Copyright ©2020</p>
    </footer>


{%  endblock %}
